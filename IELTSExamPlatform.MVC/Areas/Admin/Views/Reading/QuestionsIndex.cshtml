
@{
    ViewData["Title"] = "QuestionsIndex";
}
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Reading List</h6>
                    <a asp-action="CreateQuestion" asp-controller="Reading" class="btn btn-outline-primary">Create</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">CreatedTime</th>
                                <th scope="col">CostPrice</th>
                                <th scope="col">SellPrice</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Discount</th>
                                <th scope="col">Category</th>
                                <th colspan="3" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Id</td>
                                <td><img src="~/imgs/products/CoverImage" width="50" /></td>
                                <td>Name</td>
                                <td>Description</td>
                                <td>CreatedTime</td>
                                <td>CostPrice</td>
                                <td>SellPrice</td>
                                <td>Quantity</td>
                                <td>Discount</td>
                                <td>CategoryId</td>
                                <td>
                                    <a class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="Id">Update</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="Id">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

